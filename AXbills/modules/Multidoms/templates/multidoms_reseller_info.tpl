<div class='card card-primary card-outline box-big-form'>
    <div class='card-header with-border'><h4 class='card-title'>_{INFO}_</h4></div>
    <div class='card-body'>

        <div class='form-group'>
            <label class='control-label col-md-3 required' for='SUM'>_{DEPOSIT}_:</label>
            <div class='col-md-4'>
                %DEPOSIT%
            </div>
        </div>

        <div class='form-group'>
            <label class='control-label col-md-3' for='CREDIT'>_{CREDIT}_:</label>
            <div class='col-md-9'>
                %CREDIT%
            </div>
        </div>

        <div class='form-group'>
            <label class='control-label col-md-3' for='STATUS'>_{STATUS}_:</label>
            <div class='col-md-9'>
                %STATUS%
            </div>
        </div>

        <div class='form-group'>
            <label class='control-label col-md-3' for='PERCENTAGE'>_{PERCENTAGE}_:</label>
            <div class='col-md-9'>
                %PERCENTAGE%
            </div>
        </div>


    </div>

</div>


