<div class='mr-0'>
  <i class='%COLOR%'></i>
  <div class='timeline-item mr-0'>
    <span class='time'><i class='fas fa-clock'></i> %DATE%</span>
    <h3 id='%LAST_MSG%' class='timeline-header'>%PERSON%</h3>
    <div class='timeline-body'>
      %MESSAGE%
    </div>
    <div class='timeline-footer' style='background-color: rgba(0, 0, 0, .03); min-height: 47px;'>
      %ATTACHMENT%
      <div class='float-left'>%RUN_TIME%</div>
      <div class='text-right'>%QUOTING% %EDIT% %DELETE% %NEW_TOPIC%</div>
    </div>
  </div>
</div>


