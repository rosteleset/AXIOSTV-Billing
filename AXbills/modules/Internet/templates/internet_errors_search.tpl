<div class='col-xs-12 col-md-6'>
    <div class='card card-primary card-outline box-big-form'>
        <div class='card-body'>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <label class='control-label col-md-10' for='MESSAGE'>_{MESSAGE}_</label>
                        <div class="input-group">
                            <input id='MESSAGE' name='MESSAGE' value='%MESSAGE%' placeholder='%MESSAGE%' class='form-control' type='text'>
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-6">
                        <label class='control-label col-md-10' for='ACTION'>_{ACTION}_</label>
                        <div class="input-group">
                            %ACTIONS_SEL%
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-12 col-md-6">
                        <label class='control-label col-md-10' for='TYPE'>_{TYPE}_</label>
                        <div class="input-group">
                            %LOG_TYPE_SEL%
                        </div>
                    </div>

                    <div class="col-sm-12 col-md-6">
                        <label class='control-label col-md-10' for='NAS'>_{NAS}_</label>
                        <div class="input-group">
                            %NAS_ID_SEL%
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>