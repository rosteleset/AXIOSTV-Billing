<div class='btn-group' style='display: inline-flex; margin: 0 10px;'>
  <a class='btn btn-%BUTTON_CLASS=primary%' title='%TITLE%' href='%URL%'>%TITLE%</a>
  <button type='button' class='btn btn-%BUTTON_CLASS% dropdown-toggle' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false'>
    <span class='caret'></span>
    <span class='sr-only'>Toggle Dropdown</span>
  </button>
  <ul class='dropdown-menu'>
    <a class='dropdown-item' title='%DROPDOWN_TITLE%' href='%DROPDOWN_URL%'>%DROPDOWN_TITLE%</a>
  </ul>
</div>
